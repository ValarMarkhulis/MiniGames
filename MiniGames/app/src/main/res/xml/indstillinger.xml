<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Spillernavn">

    <PreferenceCategory android:title="Indstillinger">
        <EditTextPreference
            android:id="@+id/spillernavn"
            android:defaultValue="@string/spillernavn_res"
            android:key="spillernavn_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/spillernavn_res"
            android:text="test"
            android:title="Spillernavn" />
        <CheckBoxPreference
            android:id="@+id/checkbox_globalScore"
            android:defaultValue="true"
            android:key="checkbox_globalScore"
            android:text="test"
            android:title="Global highscore" />
        <!-- //TODO Slå DefualtValue for checkboxen til false efter testning -->

        <Preference
            android:key="reset_highscore"
            android:title="Nulstil lokal highscore" />
        <Preference
            android:key="Go_to_menu"
            android:title="Gå til hovedmenuen" />
    </PreferenceCategory>




</PreferenceScreen>